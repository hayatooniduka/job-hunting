<% if logged_in? %>
    <%= link_to 'イベント追加', new_event_path %>
    <%= link_to 'フォルダー追加', new_folder_path %>
    <%= link_to 'フォルダー一覧', folders_path %>
    
    <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        
        <% events.each do |event| %>
            <div>
                <%= link_to event.title, event %>
            </div>
        <% end %>
    <% end %>
    <%= link_to '新規会社の追加', new_company_path %>
<% else %>
    <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
        <div class="text-center text-white">
            <h1>Welcome</h1>
            <%= link_to 'Sign up', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
<% end %>

