<h1>イベント詳細ページ</h1>

<div class="card">
    <div class="card-header">
        <p>タイトル : <%= @event.title %></p>
    </div>
    <div class="card-body">
        <p>時間 : <%= @event.start_time.strftime("%Y-%m-%d %H:%M") %></p>
        <p>内容 : <%= @event.content %></p>
    </div>
</div>
<div>
    <%= link_to "Edit", edit_event_path(@event), class: 'btn btn-info btn-sm' %>
</div>
<div>
    <%= link_to "Delete", @event, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
</div>

<%= link_to 'トップページに戻る', root_url %>